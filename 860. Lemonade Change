class Solution {
public:
    bool lemonadeChange(vector<int>& bills) {
        int n=bills.size();

        int total_5=0;
        int total_10=0;
        int total_20=0;

        for (int i=0;i<n;i++)
        {
            if (bills[i] == 5)
            {
                total_5+=1;
            }

            if (bills[i] == 10)
            {
                if (total_5<=0)
                {
                    return false;
                }
                total_5-=1;
                total_10+=1;
            }

            if (bills[i] == 20)
            {
                if (total_5 >0 && total_10>0)
                {
                    total_5--;
                    total_10--;
                }
                else if (total_5 >=3)
                {
                    total_5-=3;
                }
                else
                {
                    return false;
                }
            }
        }
        return true;
    }
};
