#include <bits/stdc++.h>
using namespace std;

class Solution {
private:
    static bool cmp(pair<double,double> a, pair<double,double> b) 
    {
        double r1 = a.first / a.second;
        double r2 = b.first / b.second;
        return r1 > r2;  
    }

public:
    double fractionalKnapsack(vector<long long>& val, vector<long long>& wt, long long capacity) 
    {
        double total = 0;
        int n = val.size();
        vector<pair<double,double>> a;

        for (int i = 0; i < n; i++) 
        {
            a.push_back({(double)val[i], (double)wt[i]});
        }

        sort(a.begin(), a.end(), cmp);

        for (int i = 0; i < n; i++) 
        {
            if (a[i].second <= capacity) 
            {
                total += a[i].first;
                capacity -= a[i].second;
            } 
            else 
            {
                double ratio = a[i].first / a[i].second;
                total += ratio * capacity;
                break;
            }
        }

        return total;
    }
};
